pipeline {
    agent any
    stages {
	stage('Download dependencies') {
            steps {
                sh 'yarn'
            }
        }
        stage('Build') {
            steps {
                    sh 'yarn build'
            }
        }
        stage('Unit Test') {
            steps {
                    sh 'yarn test:unit'
            }
        }
		stage('Component Test') {
            steps {
                    sh 'yarn test:component'
            }
        }
        stage('E2E Test') {
            steps {
                    sh "yarn test:e2e"
            }
        }
    }
}
